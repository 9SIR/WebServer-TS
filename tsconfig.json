{
	"compilerOptions": {
		"target": "esnext",
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"moduleDetection": "force",
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"allowJs": true,
		"sourceMap": true,
		"declaration": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"lib": ["esnext"],
		"types": ["node"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
